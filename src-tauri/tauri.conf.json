{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Svelte Tauri Template",
  "version": "1.0.0",
  "identifier": "com.template.svelte-tauri",
  "build": {
    "beforeBuildCommand": "npm run sveltekit:build",
    "beforeDevCommand": "npm run sveltekit:dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Svelte Tauri Template",
        "width": 800,
        "height": 600,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
